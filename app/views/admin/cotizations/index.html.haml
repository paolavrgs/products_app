%section.cart.bgwhite.p-t-70.p-b-100
  .container
    .container-table-cart.pos-relative
      .wrap-table-shopping-cart.bgwhite
        %table.table-shopping-cart
          %tr.table-head
            %th Usuario
            %th Producto
            %th Cantidad
            %th Precio total
            %th
          - @cotizations.each do |cotization|
            %tr.table-row
              %td= cotization.user.email
              %td= cotization.product.title
              %td= cotization.quantity
              -# %td= number_to_currency(product.price, locale: :en)
              %td
                %ul
                  %li
                    = link_to admin_cotization_path(cotization), class: 's-text19' do
                      %i.fa.fa-eye
                  %li
                    = link_to edit_admin_cotization_path(cotization), class: 's-text19' do
                      %i.fa.fa-pencil
                  %li                    
                    = link_to admin_cotization_path(cotization), method: :delete, data: { confirm: 'Est√°s seguro?' }, class: 's-text19' do
                      %i.fa.fa-trash
