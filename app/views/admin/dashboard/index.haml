%h4.m-text26.p-b-36.p-t-15 Estadisticas de Inventario
.chart
  %canvas{ id: "myChart" }

%script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js' }
:javascript
  var ctx = document.getElementById("myChart").getContext('2d');
  var myChart = new Chart(ctx, {
      type: 'pie',
      data: {
          labels: ["Stock", "Vendidos"],
          datasets: [{
              label: '# of Votes',
              data: [#{@general_counter}, #{@cotizations_count}],
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)'
              ],
              borderColor: [
                  'rgba(255,99,132,1)',
                  'rgba(54, 162, 235, 1)'
              ],
              borderWidth: 1
          }]
      },
      options: {
          responsive: true,
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero:true
                  }
              }]
          }
      }
  });
:scss
  .chart {
    width: 100%;
    height: 500px;

    canvas {
      width: 100%;
      height: 100%;
    }
  }